// Pattern 1: Square of Stars
/*
 * * * *
 * * * *
 * * * *
 * * * *
 */

for (let i = 0; i < 4; i++) {
  let row = " ";
  for (let j = 0; j < 4; j++) {
    row = row + "* ";
  }
  console.log(row);
}

// Pattern 2: Right-Angled Triangle of Stars
/*
 *
 * *
 * * *
 * * * *
 */
console.log("\nPattern 2: Right-Angled Triangle of Stars");
for (let i = 0; i < 4; i++) {
  let row = " ";
  for (let j = 0; j <= i; j++) {
    row = row + "* ";
  }
  console.log(row);
}
